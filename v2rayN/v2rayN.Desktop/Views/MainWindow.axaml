<Window
    x:Class="v2rayN.Desktop.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Yvpn"
    Width="460"
    Height="650"
    MinWidth="380"
    MinHeight="560"
    Icon="/Assets/NotifyIcon1.ico"
    Background="#07070A"
    ShowInTaskbar="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <LinearGradientBrush x:Key="PanelBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#171820" />
            <GradientStop Offset="1" Color="#0D0D12" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="HeaderBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Offset="0" Color="#1C1B25" />
            <GradientStop Offset="1" Color="#141118" />
        </LinearGradientBrush>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Border.InfoCard">
            <Setter Property="Background" Value="#13141C" />
            <Setter Property="BorderBrush" Value="#2A2D3A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="12" />
        </Style>

        <Style Selector="Button.ActionPrimary">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#FFF4F6" />
            <Setter Property="Background" Value="#B4143C" />
            <Setter Property="BorderBrush" Value="#E44A70" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style Selector="Button.ActionPrimary:pointerover">
            <Setter Property="Background" Value="#C01B46" />
        </Style>

        <Style Selector="Button.ActionSecondary">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#FFDDE4" />
            <Setter Property="Background" Value="#1A1B24" />
            <Setter Property="BorderBrush" Value="#343747" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style Selector="Button.ActionSecondary:pointerover">
            <Setter Property="Background" Value="#20212D" />
        </Style>
    </Window.Styles>

    <Grid ClipToBounds="True">
        <Grid IsHitTestVisible="False">
            <Ellipse
                Width="420"
                Height="420"
                Margin="0,-220,-140,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Offset="0" Color="#77B4143C" />
                        <GradientStop Offset="1" Color="#00B4143C" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse
                Width="340"
                Height="340"
                Margin="-120,0,0,-180"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Offset="0" Color="#332AA5FF" />
                        <GradientStop Offset="1" Color="#002AA5FF" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <Grid Margin="20" RowDefinitions="Auto,*,Auto">
            <Border
                Grid.Row="0"
                Padding="18,16"
                Background="{StaticResource HeaderBackgroundBrush}"
                BorderBrush="#3A3142"
                BorderThickness="1"
                CornerRadius="16">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Spacing="2">
                        <TextBlock
                            FontSize="33"
                            FontWeight="Bold"
                            Foreground="#FFF2F2"
                            Text="Yvpn" />
                        <TextBlock
                            Foreground="#B8BAC6"
                            Text="Secure tunnel control center" />
                    </StackPanel>

                    <Border
                        Grid.Column="1"
                        Padding="10,6"
                        VerticalAlignment="Top"
                        Background="#2D101A"
                        BorderBrush="#A3294A"
                        BorderThickness="1"
                        CornerRadius="10">
                        <TextBlock
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="#FFCBD7"
                            Text="YVPN CORE" />
                    </Border>
                </Grid>
            </Border>

            <Border
                Grid.Row="1"
                Margin="0,14,0,14"
                Padding="18"
                Background="{StaticResource PanelBackgroundBrush}"
                BorderBrush="#383C4B"
                BorderThickness="1"
                CornerRadius="18">
                <Grid
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                    RowSpacing="10">
                    <Border
                        HorizontalAlignment="Center"
                        Padding="14,6"
                        Background="#1A1E2A"
                        BorderBrush="#3A4156"
                        BorderThickness="1"
                        CornerRadius="999">
                        <TextBlock
                            x:Name="txtConnectionStatus"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#C8CDD8"
                            Text="Disconnected" />
                    </Border>

                    <Border
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Padding="10"
                        Background="#120E13"
                        BorderBrush="#5A1E32"
                        BorderThickness="1"
                        CornerRadius="120">
                        <Button
                            x:Name="btnToggleConnection"
                            Width="194"
                            Height="194"
                            Background="#B4143C"
                            BorderBrush="#EF6C8A"
                            BorderThickness="2"
                            Content="CONNECT"
                            CornerRadius="97"
                            FontSize="31"
                            FontWeight="Bold"
                            Foreground="#FFF4F6" />
                    </Border>

                    <Border Grid.Row="2" Classes="InfoCard">
                        <StackPanel Spacing="4">
                            <TextBlock
                                Foreground="#98A1B4"
                                Text="Active Node"
                                TextWrapping="Wrap" />
                            <TextBlock
                                x:Name="txtRunningServerDisplay"
                                Foreground="#F4F5FA"
                                Text="No server selected"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="3" Classes="InfoCard">
                        <StackPanel Spacing="4">
                            <TextBlock
                                Foreground="#98A1B4"
                                Text="Runtime Status"
                                TextWrapping="Wrap" />
                            <TextBlock
                                x:Name="txtRunningInfoDisplay"
                                Foreground="#D6D9E2"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="4" Classes="InfoCard">
                        <Grid ColumnDefinitions="Auto,*">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="#98A1B4"
                                Text="Live Speed" />
                            <TextBlock
                                x:Name="txtSpeedProxyDisplay"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Foreground="#EDEFF7"
                                TextAlignment="Right"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <Grid
                Grid.Row="2"
                ColumnDefinitions="*,10,*"
                RowDefinitions="Auto">
                <Button
                    x:Name="btnImportFromClipboard"
                    Grid.Column="0"
                    Height="44"
                    Classes="ActionPrimary"
                    Content="Import From Clipboard" />
                <Button
                    x:Name="btnExitApp"
                    Grid.Column="2"
                    Height="44"
                    Classes="ActionSecondary"
                    Content="Exit" />
            </Grid>
        </Grid>
    </Grid>
</Window>
